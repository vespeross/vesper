generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

  schemas = ["public", "auth"]
}

enum Strategy {
  LOCAL
  GOOGLE

  @@schema("auth")
}

model User {
  cid           String   @id @default(cuid())
  email         String   @unique
  password_hash String?
  strategy      Strategy @default(LOCAL)

  @@schema("auth")
}
