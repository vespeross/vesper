generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

  schemas = ["public", "auth", "projects", "databases"]
}


enum DatabaseType {
  POSTGRES
  MYSQL
  MONGODB

  @@schema("databases")
}

model User {
  cid           String    @id @default(cuid())
  email         String    @unique
  password_hash String?
  Project       Project[]

  @@index([email], name: "email")
  @@schema("auth")
}

model Project {
  cid         String     @id @default(cuid())
  name        String     @unique
  description String?
  ownerId     String
  owner       User       @relation(fields: [ownerId], references: [cid])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deletedAt   DateTime?
  Database    Database[]

  @@index([ownerId], name: "ownerId")
  @@schema("projects")
}

model Database {
  cid          String         @id @default(cuid())
  name         String         @unique
  description  String?
  type         DatabaseType
  projectId    String
  project      Project        @relation(fields: [projectId], references: [cid])
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  deletedAt    DateTime?
  DatabaseUser DatabaseUser[]

  @@index([projectId], name: "projectId")
  @@schema("databases")
}

model DatabaseUser {
  cid        String   @id @default(cuid())
  username   String
  password   String
  databaseId String
  database   Database @relation(fields: [databaseId], references: [cid])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@schema("databases")
}
