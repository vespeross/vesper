generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

  schemas = ["public", "auth", "projects"]
}

enum Strategy {
  LOCAL
  GOOGLE

  @@schema("auth")
}

model User {
  cid           String    @id @default(cuid())
  email         String    @unique
  password_hash String?
  strategy      Strategy  @default(LOCAL)
  Project       Project[]

  @@index([email], name: "email")
  @@schema("auth")
}

model Project {
  cid         String   @id @default(cuid())
  name        String   @unique
  description String?
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [cid])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  @@index([ownerId], name: "ownerId")
  @@schema("projects")
}
